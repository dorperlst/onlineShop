
 

   <head>
    
    <!DOCTYPE html>
    
    <html>
        <link rel="stylesheet" href="/css/test.css">
        <link rel="icon" href="/img/weather.png">
    </head>
    <body>
      <div class="wrapper">
        <%- include('../partials/header.ejs') %>
        <article class="main">
          <div class="center_title_bar"> Products</div>

          <section id="secProducts" class="grid-wrapper">
            <% products.forEach(function(product) { %>
              <div class="product-card">
                <div class="product-image">   
            <% if ( product.images[0]) { %>
                  <img alt="" border="0"  src="../../uploads/<%= product.images[0] %>"></img> 
  
            <% } else  { %>
              <img  src="../../uploads/default.png"></img> 
              <% }  %>
              </div>
            
              <div class="product-info">
                  <label><%= product.name %> </label>
                  <label><%= product.price %>$</label>
                  <a href="/<%=shopname %>/view/<%= product._id %>" >details... </a>
              </div>
            </div>
  
          <% }); %>


          </section>  

 
          <div class="center">
            <%  if ( parseInt(pager) >0) { %>
              <li><a href="tryit.asp-filename=trycss_ex_pagination_center.html#">«</a></li>

            <ul class="pagination"></ul>
            <%  for (i=0;i< parseInt(product.pager) ;i++) { %>
             
                <li><a class="active" href="tryit.asp-filename=trycss_ex_pagination_center.html#">i</a></li>
                
              </ul>
              <li><a href="tryit.asp-filename=trycss_ex_pagination_center.html#">»</a></li>

        <% }  %>
        
        <% }  %>
            <label><%= products.length %> rows out of   <%= totalRows %></label> 

          </div>
          
          </body>
          </html>
          



















            
          
        </article>



        <aside class="aside aside-1">
          <div class="left_content">
            <%- include('../partials/categories.ejs') %>
            <script src="/js/categories.js"></script>

          </div>

        </aside>
        <aside class="aside aside-2">
 
          <% if(username == 'Guest' ){%>
  
          <%- include('../partials/login.ejs') %>
  
          <% } else {   %>
   
            <div class="shopping_cart">
              <div class="title_box">Shopping cart</div>
              <div class="cart_details"> <%= orderStat.totalItems %> items <br>
                <span class="border_cart"></span> Total: <span class="price"><%= orderStat.total %>$</span> </div>
              <div class="cart_icon"><a href="#"><img src="../../images/shoppingcart.png" alt="" width="35" height="35" border="0"></a></div>
            </div>
  
          <% } %>
  
  
          <div class="title_box">Manufacturers</div>
          <ul class="left_menu">
            <li class="odd"><a href="#">Bosch</a></li>
            <li class="even"><a href="#">Samsung</a></li>
            <li class="odd"><a href="#">Makita</a></li>
            <li class="even"><a href="#">LG</a></li>
            <li class="odd"><a href="#">Fujitsu Siemens</a></li>
            <li class="even"><a href="#">Motorola</a></li>
            <li class="odd"><a href="#">Phillips</a></li>
            <li class="even"><a href="#">Beko</a></li>
          </ul>
        </aside>
        <footer class="footer">Footer</footer>
      </div>
  </body>
</html>