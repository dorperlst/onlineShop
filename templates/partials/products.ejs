<section  class="grid-wrapper">
    <% products.products.forEach(function(product) { %>
      <div class="product-card">
        <div class="center product_title_big"><%= product.name %>
        </div>
        <div class="product-image">   
    <% if ( product.mainimage) { %>
          <img alt="" border="0"  src="../../uploads/<%= product.mainimage %>"></img> 

    <% } else  { %>
      <img  src="../../images/default.jpg"></img> 
      <% }  %>
      </div>
    
      <div class="product-info">
         
      </div>

      <div class="prod_details_tab"> 
        <a href="#" title="header=[Add to cart] body=[&nbsp;] fade=[on]">
          <img src="../../images/cart.gif" alt="" class="left_bt" border="0">
        </a> 
        <a class="price" href="#"> <%= product.price %>$</a>
       <a href="/<%=shopname %>/view/<%= product._id %>"class="details">details</a> </div>

    </div>

  <% }); %>

  
  </section>  
  
  <div class="center">
    <% if ( parseInt(products.pager) > 1) { %>   
      <ul id="pager" class="pagination"> 
        <!-- <li><a href=" ">«</a></li>
     
        <li><a href=" ">»</a></li> -->
      </ul>
    <% }  %>
  </div>
    <div class="center">
      <label>showing  <%= products.products.length %>   out of   <%= products.totalRows %></label> 

    </div>

  
  <script src="/js/products.js"></script>
  <script type="text/javascript">
    pagination("<%= products.pager %>")
  </script>
 